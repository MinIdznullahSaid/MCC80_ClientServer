@model IEnumerable<API.Models.Room>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<h1 style="padding-top: 80px">Room Data</h1>

<p style="padding-top: 10px; padding-bottom: 10px">
    <a class="btn btn-primary" href="room/Create">Add New</a>
</p>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
