@{
    ViewData["Title"] = "403 Forbidden";
    Layout = "_ErrorLayout";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .error-container {
        text-align: center;
    }

    .error-code {
        font-size: 72px;
        color: #dc3545;
    }

    .error-message {
        font-size: 24px;
        margin-top: 16px;
    }

    .countdown {
        font-size: 18px;
        margin-top: 24px;
    }

    .error-image {
        max-width: 300px;
        margin-top: 24px;
    }

    .back-button {
        margin-top: 16px;
    }
</style>

<div class="error-container">
    <a href="/home/index" class="back-button">Back to Home</a>
</div>

<div class="error-container">
    <img src="../assets/images/backgrounds/403.jpg" alt="Unauthorized Image" class="error-image" style="max-width:600px; max-height:600px; align-content:center;">
</div>


